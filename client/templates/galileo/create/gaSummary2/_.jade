template(name="gaSummary2")    
    +cardLayout(heading="Experiment Design Summary" cardId=cardId stepnumber=stepnumber nextDisabled=nextDisabled noFeedback=noFeedback lastAction=true hideNav=hideNav timeStamp=timeStamp type=type designId=getDesignId)
        +gaExperimentDesign(designId=designId allowEdits=true examples=examples design_cause=design_cause design_relation=design_relation design_effect=design_effect design_mechanism=design_mechanism design_cause_measure=design_cause_measure design_effect_measure=design_effect_measure design_condition_experimental=design_condition_experimental design_condition_control=design_condition_control design_criteria_exclusion=design_criteria_exclusion design_criteria_inclusion=design_criteria_inclusion design_related_works=design_related_works)
        
        if isOpenHumans
            +gaExperimentDesignFollowupMessage

        br
        p(style="font-size: 20px; font-weight: 100; font-weight: bold;") Before proceeding, please make sure that ...
        ul.variable-checklist(style="list-style: none")
            li
                input.check(style="float: right" type="checkbox" class="filled-in" id="cause-specific-check")
                label(for="cause-specific-check" class="blue-text text-darken-2" style='font-size: 20px; font-weight: 100; font-color: black')

                    span
                        | ... the cause ( #{cause} ) is
                        a.helpbtn(href="#" id="help-#{cardId}-2" style="border-width:0px 0px 1px 0px; border-style:solid") specific
                            i.fa.fa-question-circle(aria-hidden="true")
                    br
                    +helpLayout(cardId=cardId helpId="2" title="If your cause is ambiguous or too broad, edit it to make it specific" learnLink="")
                        p #[b Example hypothesis : ] #[u {{getExamples '7-0-1'}}] improves health
                        p #[b Improved hypothesis : ] #[u {{getExamples '7-0-2'}}] {{getExamples '7-0-3'}}

            li
                input.check(style="float: right" type="checkbox" class="filled-in" id="effect-specific-check")
                label(for="effect-specific-check" class="blue-text text-darken-2" style='font-size: 20px; font-weight: 100; font-color: black')
                    span
                        | ... the effect ( #{effect} ) is
                        a.helpbtn(href="#" id="help-#{cardId}-3" style="border-width:0px 0px 1px 0px; border-style:solid") specific
                            i.fa.fa-question-circle(aria-hidden="true")
                    br
                    +helpLayout(cardId=cardId helpId="3" title="If your effect is ambiguous or too broad, edit it to make it specific" learnLink="")
                        p #[b Example 1: ] {{getExamples '7-1-0'}} #[u {{getExamples '7-1-1'}}]
                        p #[b Improved hypothesis : ] {{getExamples '7-1-2'}} #[u {{getExamples '7-1-3'}}]
                        br
                        p #[b Example 2: ] {{getExamples '7-1-4'}} #[u {{getExamples '7-1-5'}}]
                        p #[b Improved hypothesis : ] {{getExamples '7-1-6'}} #[u {{getExamples '7-1-7'}}]

            li
                input.check(style="float: right" type="checkbox" class="filled-in" id="relation-defined-check")
                label(for="relation-defined-check" class="blue-text text-darken-2" style='font-size: 20px; font-weight: 100; font-color: black')

                    span
                        |... the relation between cause and effect is
                        a.helpbtn(href="#" id="help-#{cardId}-4" style="border-width:0px 0px 1px 0px; border-style:solid") clear
                            i.fa.fa-question-circle(aria-hidden="true")
                    //span: a(href="#"): i.material-icons.help-icon help_outline

                    +helpLayout(cardId=cardId helpId="4" title="Your hypothesis should be falsifiable - specifically, it should either hold or not. Your 'relation' should assert that" learnLink="")
                        p #[b Example : ] {{getExamples '7-2-0'}} #[u {{getExamples '7-2-1'}}] {{getExamples '7-2-2'}}
                        p #[b Improved hypothesis : ] {{getExamples '7-2-3'}} #[u {{getExamples '7-2-4'}}] {{getExamples '7-2-5'}}
            li
                input.check(style="float: right" type="checkbox" class="filled-in" id="mechanism-defined-check")
                label(for="mechanism-defined-check" class="blue-text text-darken-2" style='font-size: 20px; font-weight: 100; font-color: black')

                    span
                        |... the mechanism discusses how cause and effect might be linked 
                        a.helpbtn(href="#" id="help-#{cardId}-5" style="border-width:0px 0px 1px 0px; border-style:solid")
                            i.fa.fa-question-circle(aria-hidden="true")
                    //span: a(href="#"): i.material-icons.help-icon help_outline
                    +helpLayout(cardId=cardId helpId="5" title="Improving the 'mechanism'" learnLink="")
                        p #[b Example : ] {{getExamples '7-3-0'}} #[u {{getExamples '7-3-1'}}] {{getExamples '7-3-2'}}
                        p #[b Improved hypothesis : ] {{getExamples '7-3-3'}} #[u {{getExamples '7-3-4'}}] {{getExamples '7-3-5'}}

            li
                input.check(style="float: right" type="checkbox" class="filled-in" id="hypo-alternate-check")
                label(for="hypo-alternate-check" class="blue-text text-darken-2" style='font-size: 20px; font-weight: 100; font-color: black')

                    span
                        |... your experiment can only find evidence for/against your
                        | #[b hypothesis]                         
                        a.helpbtn(href="#" id="help-#{cardId}-6" style="border-width:0px 0px 1px 0px; border-style:solid") 
                            i.fa.fa-question-circle(aria-hidden="true")
                    //span: a(href="#"): i.material-icons.help-icon help_outline
                    +helpLayout(cardId=cardId helpId="6" title="You cannot extrapolate your experiment's results to any other question" learnLink="")
                        p #[b Example hypothesis: ] {{getExamples '7-4-0'}}
                        p #[b Description: ] {{getExamples '7-4-1'}}

            //li
                input.check(style="float: right" type="checkbox" class="filled-in" id="mechanism-defined-check")
                label(for="hypo-alternate-check" class="blue-text text-darken-2" style='font-size: 20px; font-weight: 100; font-color: black')

                    span
                        |... might the alternate hypothesis be true? assume it's true, can you make your hypothesis more specific.... assume your hypo is too broad to be true..
                        a.helpbtn(href="#" id="help-#{cardId}-6" style="border-width:0px 0px 1px 0px; border-style:solid") clear
                            i.fa.fa-question-circle(aria-hidden="true")
                    //span: a(href="#"): i.material-icons.help-icon help_outline
                    +helpLayout(cardId=cardId helpId="6" title="Improving the 'mechanism'" learnLink="")
                        p #[b Example : ] Running for 30 minutes daily #[u affects] quality of sleep
                        p #[b Improved hypothesis : ] Running for 30 minutes daily #[u improves] quality of sleep
        if showAskFeedback    
            div
                hr.summary-hr             
                br
                p(style="font-size: 20px; font-weight: 100; font-weight: bold;") Add a feedback request to the reviewers so that they can provide better suggestion for improving your experiment 
                br
                p(style="font-size: 18px;") Example: I am not sure if my preparation steps on the experimental condition are specific enough. Could you please provide more feedback on this part?
                br
                p(class="blue-text text-darken-2" style='font-size: 20px; font-weight: 100; font-color: black') Please describe your own concerns to the reviewers here:
                textarea.materialize-textarea(id="feedbackRequest" class="textarea-comment" name="feedback" placeholder="{{hasFeedbackRequest}}" required)
