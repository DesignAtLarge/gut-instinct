template(name="gaVideoLearnLayout")
    +exampleLayout(title="Learn more from experts!" iconType="video_library")
        p(style='font-size: 20px; font-weight: 100;') #{videoTitle}.
        //br
        p(style='font-size: 20px; font-weight: 100;') Material curated from
            a(href='{{videoSrc}}' target="_blank"): u #{videoSrc}
        br
        div.tag-video
            iframe(width='100%', height='350', src='#{videoUrl}?rel=0&showinfo=0&modestbranding=1&enablejsapi=1', frameborder='0', allowfullscreen)


